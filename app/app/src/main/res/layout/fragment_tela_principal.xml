<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1dbdb"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.TelaPrincipal">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:background="#f0143c">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-85dp"
            android:text="Encontre mobilizações"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:contentDescription="@string/app_name"
            android:text="próximas a você"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Procurar"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#37000000"
            android:text="Procurar"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="74dp"
            android:layout_height="66dp"
            android:background="@mipmap/ic_sandwitchicon" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="282dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:background="@android:drawable/editbox_background_normal"
        android:ems="10"
        android:hint="Digite o nome da mobilização"
        android:inputType="textPersonName"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relative"
        android:background="@android:color/background_light"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/relativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#b7000000"
            android:visibility="invisible">

            <TextView
                android:id="@+id/lblMostrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="65dp"
                android:fontFamily="monospace"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:visibility="visible" />

            <Button
                android:id="@+id/button2"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:background="@android:drawable/ic_menu_gallery" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>